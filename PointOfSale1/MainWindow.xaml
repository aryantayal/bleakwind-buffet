<Window x:Class="PointOfSale1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="Bleakwind Buffet Point Of Sale" Height="550" Width="900">
    <Grid Background="#2A363B">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <TextBlock FontWeight="Bold" TextAlignment="Center" FontSize="17" Foreground="#FF847C">
            Bleakwind Buffet Order
        </TextBlock>

        <Border Name="ButtonBorder" Grid.Column="0">
            <local:MenuSelector Margin="20,20,20,20" />
        </Border>

        <Border Name="OrderBorder" Grid.Column="1">
            <local:OrderCompnent Margin="20,20,20,20" />
        </Border>

    </Grid>
</Window>