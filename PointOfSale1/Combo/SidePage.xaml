<UserControl x:Class="PointOfSale.SidePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2A363B">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="bVokunSalad" Grid.Column="2" Grid.Row="0" Click="bVokunSalad_Click" Margin="10" FontSize="19">Vokun Salad</Button>
        <Button Name="bFriedM" Grid.Column="2" Grid.Row="1" Click="bFriedM_Click" Margin="10" FontSize="19">Fried Miraak</Button>
        <Button Name="bMadOtar" Grid.Column="2" Grid.Row="2" Click="bMadOtar_Click" Margin="10" FontSize="19">Mad Otar Grits</Button>
        <Button Name="bDragonW" Grid.Column="2" Grid.Row="3" Click="bDragonW_Click" Margin="10" FontSize="19">Dragonborn Waffle Fries</Button>
    </Grid>
</UserControl>