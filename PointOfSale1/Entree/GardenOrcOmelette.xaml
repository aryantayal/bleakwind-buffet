<UserControl x:Class="PointOfSale.Entree.GardenOrcOmelette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox>
            <CheckBox IsChecked="{Binding Path=Broccoli}">Broccoli</CheckBox>
            <CheckBox IsChecked="{Binding Path=Mushrooms}">Mushrooms</CheckBox>
            <CheckBox IsChecked="{Binding Path=Tomato}">Tomato</CheckBox>
            <CheckBox IsChecked="{Binding Path=Cheddar}">Cheddar</CheckBox>
        </ListBox>
        <Button Click="doneButton_Click" Name="DoneButton" Margin="200,200,200,200">Done</Button>
        <Button Click="DoneComboButton_OnClick" Name="DoneComboButton" Margin="200,300,200,100">Combo Add</Button>


    </Grid>
</UserControl>